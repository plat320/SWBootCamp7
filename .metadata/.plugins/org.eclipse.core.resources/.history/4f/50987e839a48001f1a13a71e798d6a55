	typedef struct _snake_object{
		// TODO: 머리 위치도 여기서 바로 접근 가능하게 변수 만들기, 뱀의 head, tail 변수 (포인터)
		char object_map[GAME_OBJECT_MAP_ROW][GAME_OBJECT_MAP_COLUMN];
		int snake_head_dir;
		int queue_no;
		int score;
		POINT snake_head_pos;
		POINT snake_tail_pos;
	}SNAKE_OBJECT;

